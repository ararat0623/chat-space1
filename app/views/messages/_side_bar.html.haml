.side-bar
 .side-bar__user-name
  .top-items
   %p.top-items__name
    = current_user.name

   %ul.top-items__icons<
   
    %li.top-items__icons--icon.top<
     = link_to :new_group, class: "top-items__icons--group" do
      %i.far.fa-edit.top-items__icons--image
 
    %li.top-items__icons--icon<
     = link_to :edit_user_registration,class:"top-items__icons--setting" do
      %i.fas.fa-cog.top-items__icons--image


 .side-bar__group-list
  - current_user.groups.each do |group|
   .group
    = link_to "/groups/#{group.id}/messages" do
     %p.group__name
      = group.name
     %p.group__message
      = group.show_last_message



   
  
